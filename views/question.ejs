<script type="text/ng-template" id="/question.html">
  <div class="page-header">
    <h1>Survey Builder - Question</h1>
  </div>

  <h3>{{question.text}}</h3>

    <div ng-repeat="choice in question.choices" class="radio">

        <span style="font-size:20px; margin-left:10px;">
        <label><input type="radio" name="answer" ng-model="poll.userVote" value="{{choice._id}}">
            {{choice.text}}
        </label>
        </span>

    </div>

    <form ng-submit="addUser()" style="margin-top:30px;">
        <h3>Add a new user</h3>

      <div class="form-group">
      <input type="text" class="form-control" placeholder="Name" ng-model="username"></input>
      </div>
      <div class="form-group">
      <input type="text" class="form-control" placeholder="Password" ng-model="password"></input>
      </div>
      <button type="submit" class="btn btn-primary">Post</button>
    </form>
</script>
