<html>
<head>
    <title>Survey Builder</title>
    <link href="http://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css" rel="stylesheet">
    <script src="http://ajax.googleapis.com/ajax/libs/angularjs/1.3.10/angular.min.js"></script>
    <script src="/javascripts/users.js"></script>
</head>

<body ng-controller="UsersController">
    <div class="row">
        <div class="col-md-6 col-md-offset-3">
            <ui-view></ui-view>
        </div>
    </div>
    <script type="text/ng-template" id="/users.html">
      <div class="page-header">
        <h1>Survey Builder - Users</h1>
      </div>

        <div ng-repeat="user in users">

            <span style="font-size:20px; margin-left:10px;">
                {{user.username}}
            </span>
        </div>

        <form ng-submit="addUser()" style="margin-top:30px;">
            <h3>Add a new user</h3>

          <div class="form-group">
          <input type="text" class="form-control" placeholder="Name" ng-model="username"></input>
          </div>
          <div class="form-group">
          <input type="text" class="form-control" placeholder="Password" ng-model="password"></input>
          </div>
          <button type="submit" class="btn btn-primary">Post</button>
        </form>
    </script>

  </body>
</html>